{
  "minVersion": "0.8.0",
  "services": {
    "TorGuardRelay": {
      "image": "ghcr.io/r3bo0tbx1/onion-relay:latest",
      "container_name": "TorGuardRelay",
      "restart": "unless-stopped",
      "environment": [
        "TZ=Asia/Tokyo"
      ],
      "network_mode": "host",
      "volumes": [
        {
          "type": "volume",
          "source": "tor-guard-data",
          "target": "/var/lib/tor"
        },
        {
          "type": "volume",
          "source": "tor-guard-logs",
          "target": "/var/log/tor"
        },
        {
          "type": "bind",
          "source": "/opt/tor-relay/relay.conf",
          "target": "/etc/tor/torrc",
          "read_only": true
        }
      ],
      "security_opt": [
        "no-new-privileges:true"
      ],
      "cap_add": [
        "NET_BIND_SERVICE",
        "CHOWN",
        "SETUID",
        "SETGID",
        "DAC_OVERRIDE"
      ],
      "labels": {
        "cosmos-stack": "TorGuardRelay",
        "cosmos-stack-main": "TorGuardRelay",
        "cosmos-description": "ðŸ§… Hardened Tor Guard Relay v1.0 with diagnostics & auto-healing",
        "cosmos-icon": "https://image.uglycat.cc/38ckdq.png",
        "cosmos-auto-update": "true",
        "cosmos-auto-update-type": "registry",
        "cosmos-force-network-secured": "false",
        "cosmos-auto-update-notify": "true",
        "cosmos-auto-update-restart": "true",
        "cosmos-version": "1.0",
        "maintainer": "rE-Bo0t.bx1 <r3bo0tbx1@brokenbotnet.com>"
      }
    }
  },
  "volumes": {
    "tor-guard-data": {},
    "tor-guard-logs": {}
  }
}